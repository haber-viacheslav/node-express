<h2>
	Basket
</h2>

<div id="basket">
	{{#if courses.length}}
		<table>
			<thead>
				<tr>
					<th>
						Course
					</th>
					<th>
						Count
					</th>
					<th>
						Actions
					</th>
				</tr>
			</thead>
			<tbody>
				{{#each courses}}
					<tr>
						<td>
							{{title}}
						</td>
						<td>
							{{count}}
						</td>
						<td>
							<button class="btn btn-small js-remove" data-id="{{id}}">
								Delete
							</button>
						</td>
					</tr>
				{{/each}}
			</tbody>
		</table>

		<p>
			<strong>
				Price:
			</strong>
			<span class="price">
				{{price}}
			</span>
		</p>
	{{else}}
		<p>
			Basket is empty
		</p>
	{{/if}}
</div>
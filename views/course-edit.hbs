<h2>
	Edit Course {{course.title}}
</h2>
<form action="/courses/edit" method="POST">
	<div class="col">
		<div class="input-field col s6">
			<input
				name="title"
				id="title"
				type="text"
				class="validate"
				required
				value="{{course.title}}"
			/>
			<span class="helper-text" data-error="fill the title">
			</span>
			<label for="title">
				Add course
			</label>
		</div>
		<div class="input-field col s6">
			<input
				name="price"
				id="price"
				type="number"
				class="validate"
				required
				value="{{course.price}}"
			/>
			<span class="helper-text" data-error="fill the price">
			</span>
			<label for="price">
				Course price
			</label>
		</div>
		<div class="input-field col s6">
			<input name="img" id="img" type="text" class="validate" required value="{{course.img}}" />
			<span class="helper-text" data-error="fill the url">
			</span>
			<label for="img">
				Image url
			</label>
		</div>
		<input name="id" type="hidden" value="{{course.id}}" />
	</div>

	<button type="submit" class="btn btn-primary">
		Edit
	</button>
</form>